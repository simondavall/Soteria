@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>
<div class="card">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-error" role="alert"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="form-input" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-error"></span>
                </div>
                <div class="card-item">
                    <label asp-for="Input.RememberMe">Remember Me</label>
                    <input type="checkbox" asp-for="Input.RememberMe" />
                    <input type="hidden" asp-for="Input.RememberMe" />
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" class="nav-item" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" class="nav-item" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
