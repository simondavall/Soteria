@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "status-danger" : "status-success";

    <div class="status-message @statusMessageClass" role="alert">
        <span>@Model</span>
        <button type="button" class="status-close" onclick="this.parentElement.remove()" aria-label="Close">
            ×
        </button>
    </div>
}
