@page
@model CreateClientModel
@{
    ViewData["Title"] = "Create Client";
}

<h2>@ViewData["Title"]</h2>
<div class="card">
    <form id="createClientForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-error" role="alert"></div>
        <div class="form-group">
            <label asp-for="Input.ClientId">Client Id</label>
            <input asp-for="Input.ClientId" class="form-input" autocomplete="client-id" aria-required="true" placeholder="client id" />
            <span asp-validation-for="Input.ClientId" class="text-error"></span>
        </div>
         <div class="form-group">
            <label asp-for="Input.ClientSecret">Client Secret</label>
            <input asp-for="Input.ClientSecret" class="form-input" autocomplete="client-secret" aria-required="true" placeholder="keep it safe" />
            <span asp-validation-for="Input.ClientSecret" class="text-error"></span>
        </div>
         <div class="form-group">
            <label asp-for="Input.DisplayName">Display Name</label>
            <input asp-for="Input.DisplayName" class="form-input" autocomplete="display-name" aria-required="true" placeholder="display name" />
            <span asp-validation-for="Input.DisplayName" class="text-error"></span>
        </div>
         <div class="form-group">
            <label asp-for="Input.RedirectUri">Redirect Uri</label>
            <input asp-for="Input.RedirectUri" class="form-input" autocomplete="redirect-uri" aria-required="true" placeholder="redirect uri" />
            <span asp-validation-for="Input.RedirectUri" class="text-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.PostLogoutRedirectUri">Post Logout Redirect Uri</label>
            <input asp-for="Input.PostLogoutRedirectUri" class="form-input" autocomplete="post-logout-redirect-uri" aria-required="true" placeholder="post logout redirect uri" />
            <span asp-validation-for="Input.PostLogoutRedirectUri" class="text-error"></span>
        </div>
        <button id="createClientSubmit" type="submit" class="btn">Create Client</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
